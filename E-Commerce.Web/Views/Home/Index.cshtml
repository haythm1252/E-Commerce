@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .slider-wrapper {
        scrollbar-width: none; 
        -ms-overflow-style: none; 
    }

    .slider-wrapper::-webkit-scrollbar {
        display: none;
    }
</style>

<body class="bg-light" >
    <header>
        <img src="~/Assets/Ramadan_Hero_Banner_Web_AR_copy_5_f3077e1b84.jpg" class="  mb-5" width="100%" height="100%" />
    </header>

    <div class="container mt-5 mb-5 position-relative">
        <h2 class="fw-bold mb-4">Top Categories</h2>

        <button class="btn btnLeft  btn-light position-absolute top-50 start-0 z-1" style="box-shadow: 0 0 10px rgba(0,0,0,0.2);">
			&#8592;        
		</button>          
        <button class="btn btnRight btn-light position-absolute top-50 end-0 z-1" style="box-shadow: 0 0 10px rgba(0,0,0,0.2);">
            &#8594;
        </button>

        <div class="slider-wrapper d-flex overflow-auto gap-3" style="scroll-behavior: smooth;">
            @foreach (var category in Model.Categories.Where(c => c.IsTopCategory == true))
            {
                <div style="min-width: 200px; flex: 0 0 auto;">
                    <a asp-action="Details" asp-controller="Category" asp-route-id="@category.Id" class="text-decoration-none">
                        <div class="card h-100 shadow-sm rounded-3 border-0" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
                            <img src="/@category.ImageUrl" class="card-img-top rounded-top" alt="@category.Name" style="height: 200px; width: 200px; object-fit: contain;">
                            <div class="card-body text-center">
                                <h5 class="card-title">@category.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>


    @foreach (var category in Model.Categories.Where(c => c.IsSection == true))
    {
        <div class="container mt-5 mb-5 position-relative">
            <h2 class="mb-4 fw-bold">@category.Name</h2>
            <button class="btn btnLeft btn-light position-absolute top-50 start-0 z-1" style="box-shadow: 0 0 10px rgba(0,0,0,0.2);">
                &#8592;
            </button>
            <button class="btn btnRight btn-light position-absolute top-50 end-0 z-1" style="box-shadow: 0 0 10px rgba(0,0,0,0.2);">
                &#8594;
            </button>
            <div class="slider-wrapper d-flex overflow-auto gap-3" style="scroll-behavior: smooth;">
                @foreach (var product in category.Products)
                {
                    <div style="height: 400px; width:200px;">
                        <div class="card product-card h-100 shadow-sm rounded-3 border-0">
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                <div style="position: relative; width: 200px; height: 200px;">
                                    <img src="/@product.ImageUrl" class="card-img-top" alt="Product" style="height: 200px; width: 200px; object-fit: cover;">
                                    <span class="badge bg-primary category-badge" style="position: absolute; top: 0; left: 0; margin: 0.25rem;">
                                        @category.Name
                                    </span>
                                </div>
								<div class="card-body d-flex flex-column">
									<h5 class="card-text fw-bolder">@product.Price EGP</h5>
                                    <h6 class="card-title">@product.Name</h6>
                                </div>
							</a>
                            <button class="btn cartbtn mt-auto ms-4 me-4 mb-4 AddToCart" data-id="@product.Id" >
								<i class="bi bi-cart-fill me-2"></i> Add to Cart
							</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</body>
@section Scripts{
    <script src="~/js/AddToCart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const slider = document.querySelector('.slider-wrapper');
            const btnLeft = document.querySelector('.btnLeft');
            const btnRight = document.querySelector('.btnRight');
            const scrollAmount = 200;

            btnRight.addEventListener('click', () => {
              slider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
            });

            btnLeft.addEventListener('click', () => {
              slider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
            });
        });
    </script>
}

