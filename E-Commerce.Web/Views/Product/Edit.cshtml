@model EditProductVM
@{
    ViewData["Title"] = "Edit";
    Layout = "_DashboardLayout";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color : #0e5aa7;">
            <h3 class="card-title mb-0">Edit Product @Model.Name</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Product" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter Product price in EGP" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" type="number" class="form-control" placeholder="Enter Product price in EGP" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@Model.Categories">
                                <option value="">Select Category</option>
                            </select>
                        </div>
                        <div class="form-check form-switch mt-2 ">
                            <input asp-for="BestSeller" class="form-check-input" type="checkbox" />
                            <label asp-for="BestSeller" class="form-check-label"></label>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Image" class="form-label"></label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="mt-2">
                            <label class="form-label">Image Preview:</label>
                            <div class="border rounded p-2" style="width:100%; height:300px; display:flex; align-items:center; justify-content:center; background-color:#f8f9fa;">
                                <img class="imagePreview" src="/@Model.CurrentImage" style="max-width: 100%; max-height: 100%;" />
                                <span class="no-image text-muted d-none">No image selected</span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg btn-success mb-5 ">Save Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/image-preview.js" asp-append-version="true"></script>
}



