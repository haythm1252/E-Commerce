<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin Dashboard - E-commerce</title>

    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
    <link href="~/css/styles2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .sb-sidenav .list-group-item,
        .sb-sidenav .nav-link {
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .sb-sidenav .list-group-item:hover,
            .sb-sidenav .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.2) !important;
                transform: translateX(4px);
                cursor: pointer;
            }
    </style>
</head>
<body class="bg-light">
    <nav class="sb-topnav navbar navbar-expand navbar-dark shadow-sm" style="background-color : #0e5aa7;">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand ps-3 fw-bold text-white">
            <i class="fas fa-shopping-bag me-2"></i>E-commerce
        </a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 text-white" id="sidebarToggle" href="#!">
            <i class="fas fa-bars fa-lg"></i>
        </button>

        <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <div class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-white" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="bg-white rounded-circle p-1">
                        <i class="fas fa-user text-primary"></i>
                    </div>
                    <span class="d-none d-lg-inline">Admin</span>
                </div>
                <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3" aria-labelledby="navbarDropdown">
                    <li><a asp-controller="Account" asp-action="LogOut" class="dropdown-item py-2 text-danger"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark text-white shadow-lg" id="sidenavAccordion" style="background-color : #0e5aa7;">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading text-uppercase fw-bold text-white-50 small px-3 py-3 mb-2">
                            <i class="fas fa-chart-line me-2"></i>Dashboard
                        </div>
                        <div class="list-group list-group-flush">
                            <a asp-controller="Admin" asp-action="Index"
                               class="list-group-item list-group-item-action bg-transparent text-white border-0 rounded-0 px-4 py-3 d-flex align-items-center gap-3">
                                <i class="fas fa-tachometer-alt text-warning"></i>
                                <span class="fw-semibold">Dashboard</span>
                            </a>
                        </div>
                        <div class="sb-sidenav-menu-heading text-uppercase fw-bold text-white-50 small px-3 py-3 mb-2">
                            <i class="fas fa-cog me-2"></i>Management
                        </div>
                        <div class="list-group list-group-flush">
                            <a asp-controller="Order" asp-action="Index"
                               class="list-group-item list-group-item-action bg-transparent text-white border-0 rounded-0 px-4 py-3 d-flex align-items-center gap-3">
                                <i class="fas fa-shopping-cart text-danger"></i>
                                <span class="fw-semibold">Orders</span>
                            </a>

                            <a asp-controller="Category" asp-action="Index"
                               class="list-group-item list-group-item-action bg-transparent text-white border-0 rounded-0 px-4 py-3 d-flex align-items-center gap-3">
                                <i class="fas fa-tags text-warning"></i>
                                <span class="fw-semibold">Categories</span>
                            </a>

                            <a asp-controller="Product" asp-action="Index"
                               class="list-group-item list-group-item-action bg-transparent text-white border-0 rounded-0 px-4 py-3 d-flex align-items-center gap-3">
                                <i class="fas fa-box text-info"></i>
                                <span class="fw-semibold">Products</span>
                            </a>

                            <a asp-controller="Account" asp-action="Index"
                               class="list-group-item list-group-item-action bg-transparent text-white border-0 rounded-0 px-4 py-3 d-flex align-items-center gap-3">
                                <i class="fas fa-users text-success"></i>
                                <span class="fw-semibold">Users</span>
                            </a>

                        </div>
                    </div>
                </div>

                <div class="sb-sidenav-footer bg-dark text-center py-3 border-top border-secondary">
                    <div class="text-white fw-bold">
                        <i class="fas fa-shield-alt me-2"></i>Admin Dashboard
                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main class="bg-light">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/scripts2.js" asp-append-version="true"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
